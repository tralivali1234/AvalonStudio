<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
             xmlns:iac="clr-namespace:Avalonia.Xaml.Interactions.Custom;assembly=Avalonia.Xaml.Interactions.Custom"
             xmlns:cont="clr-namespace:AvalonStudio.Controls;assembly=AvalonStudio.Shell.Extensibility">
    <StackPanel Orientation="Vertical" Spacing="4" Margin="4">
        <TextBlock Text="{Binding Title}" FontSize="14" VerticalAlignment="Bottom" />
        <cont:FormattedTextBlock Name="LocationTextBlock" Text="{Binding Location}" FontSize="10" Spans="{Binding Spans}" VerticalAlignment="Bottom" />
    </StackPanel>
</UserControl>
